@page "/test"
@using Alansar1.Components.Layout
@layout Anoda
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hostel Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #1e1e2d;
            color: #b2b0bf;
        }
        .sidebar {
            background-color: #2a2833;
            min-height: 100vh;
        }
        .navbar, .card {
            background-color: #33323e;
        }
        .navbar .nav-link, .sidebar .nav-link {
            color: #b2b0bf;
        }
        .sidebar .nav-link.active {
            background-color: #4caf50;
            color: white;
        }
        .card-body {
            text-align: center;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="d-flex">
        <nav class="sidebar p-3">
            <h4 class="text-light mb-4">Hostel Management System</h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" href="#"><i class="bi bi-house-door-fill"></i> Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="bi bi-calendar-check-fill"></i> Session</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="bi bi-mortarboard-fill"></i> Class</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="bi bi-building-fill"></i> Hostels</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="bi bi-egg-fried"></i> Dining Spaces</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="bi bi-clipboard-fill"></i> Dining Assignments</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="bi bi-people-fill"></i> Manage Students</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="bi bi-person-circle"></i> Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="bi bi-box-arrow-right"></i> Logout</a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="flex-grow-1 p-4">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="container-fluid">
                    <span class="navbar-brand">Welcome to the Hostel Management System!</span>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="bi bi-person-circle"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="bi bi-arrow-repeat"></i></a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Dashboard Content -->
            <div class="row text-center my-4">
                <div class="col-md-4">
                    <div class="card text-light">
                        <div class="card-body">
                            <h5>Number of Students</h5>
                            <h2>3</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-light">
                        <div class="card-body">
                            <h5>Number of Dining Halls</h5>
                            <h2>3</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-light">
                        <div class="card-body">
                            <h5>Number of Rooms</h5>
                            <h2>6</h2>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Management Cards -->
            <div class="row text-center">
                <div class="col-md-6">
                    <div class="card text-light">
                        <div class="card-body">
                            <h5>Manage Bookings</h5>
                            <p>Handle all room bookings and assignments seamlessly.</p>
                            <a href="#" class="btn btn-primary">Go to Bookings</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card text-light">
                        <div class="card-body">
                            <h5>Manage Dining Spaces</h5>
                            <p>Oversee dining space reservations and availability.</p>
                            <a href="#" class="btn btn-primary">Go to Dining Spaces</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
