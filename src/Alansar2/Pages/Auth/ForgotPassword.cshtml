

@page "/forgot-password"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Alansar.Pages.Auth.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<!-- Bootstrap CSS -->
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</head>

<div class="container h-100 d-flex align-items-center justify-content-center">
    <div class="row w-100">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow-lg p-4">
                <div class="card-body">
                    <h2 class="text-center mb-4">Forgot Password</h2>
                    <p class="text-center mb-4">Enter your email address to receive a password reset link.</p>
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="Input.Email" class="form-label"></label>
                            <input asp-for="Input.Email" class="form-control" placeholder="Enter your email address" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary w-100" disabled="@Model.IsLoading">
                                @if (Model.IsLoading)
                                {
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    <span class="ms-2">Sending...</span>
                                }
                                else
                                {
                                    <span>Send Reset Link</span>
                                }
                            </button>
                        </div>

                    </form>

                    <div class="text-center mt-4">
                        <a href="/login" class="text-decoration-none">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
