@inherits LayoutComponentBase

<div class="container-fluid p-0">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">MyApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#" @onclick="DarkModeToggle">@DarkLightModeButtonIcon</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-4" style="@MainContentStyle">
        @Body
    </main>

    <div id="blazor-error-ui">
        An unhandled error has occurred.
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>
</div>

@code {
    private bool _isDarkMode = false;

    private void DarkModeToggle()
    {
        _isDarkMode = !_isDarkMode;
    }

    public string DarkLightModeButtonIcon => _isDarkMode ? "🌙 Dark Mode" : "☀️ Light Mode";

    private string MainContentStyle => _isDarkMode
        ? "background-color: #1e1e2d; color: #b2b0bf;"
        : "background-color: #ffffff; color: #000000;";
}
