@page "/admin-home"
@using Components.Layout
@layout MainLayout
@inject HttpClient Http

<h1 class="display-4 mb-4">Welcome to the Hostel Management System!</h1>
<p class="lead mb-5">Manage your hostel efficiently with features like booking management, dining space reservations, and more.</p>

<div class="row mb-4">
    <div class="col-sm-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Number of Students</h5>
                <p class="card-text display-6">@numberOfStudents</p>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Number of Dining Halls</h5>
                <p class="card-text display-6">@numberOfDiningHalls</p>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Number of Rooms</h5>
                <p class="card-text display-6">@numberOfRooms</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-6 mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Manage Bookings</h5>
                <p class="card-text">Handle all room bookings and assignments seamlessly.</p>
                <a href="booking" class="btn btn-primary">Go to Bookings</a>
            </div>
        </div>
    </div>
    <div class="col-sm-6 mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Manage Dining Spaces</h5>
                <p class="card-text">Oversee dining space reservations and availability.</p>
                <a href="dining" class="btn btn-primary">Go to Dining Spaces</a>
            </div>
        </div>
    </div>
</div>

